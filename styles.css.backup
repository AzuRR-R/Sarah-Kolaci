@media (max-width: 480px) {
    /* Extra small mobile devices */
    .container {
        padding: 0 12px;
    }

    /* Navigation */
    .logo h1 {
        font-size: 1.8rem;
        padding: 3px 12px;
    }

    .logo .tagline {
        font-size: 0.45rem;
        letter-spacing: 1px;
    }

    /* Hero section */
    .hero {
        padding: 2rem 0;
    }

    .hero-title {
        font-size: 2.2rem;
        letter-spacing: -1px;
    }

    .hero-subtitle {
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }

    .hero-image img {
        max-width: 250px;
    }

    /* Sections */
    section {
        padding: 2.5rem 0;
    }

    .section-title {
        font-size: 1.8rem;
    }

    .section-subtitle {
        font-size: 0.9rem;
    }

    /* Products - Single column on very small screens */
    .products-scroll {
        padding: 1rem 8px 2rem 8px;
        gap: 1rem;
    }

    .product-card {
        min-width: calc(100% - 1rem);
        max-width: calc(100% - 1rem);
        border-radius: 30px;
    }

    .product-image {
        height: 220px;
        border-radius: 30px 30px 0 0;
    }

    .product-info {
        padding: 1rem;
    }

    .product-info h4 {
        font-size: 1.1rem;
    }

    .category-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .product-category::before,
    .product-category::after {
        width: 20px;
    }

    /* Buttons */
    .btn {
        padding: 0.9rem 2rem;
        font-size: 0.9rem;
        width: 100%;
        max-width: 280px;
    }

    .hero-buttons {
        width: 100%;
    }

    .hero-buttons .btn {
        max-width: 100%;
    }

    /* Forms */
    .order-form {
        padding: 1.2rem;
        border-radius: 25px;
    }

    .order-form input,
    .order-form select,
    .order-form textarea {
        padding: 0.85rem;
        border-radius: 25px;
        font-size: 16px;
    }

    .form-note {
        padding: 0.8rem 1rem;
        font-size: 0.85rem;
    }

    .btn-large {
        padding: 0.9rem 1.5rem;
        font-size: 0.95rem;
    }

    .info-box {
        padding: 1.2rem;
        border-radius: 25px;
    }

    .info-icon {
        font-size: 2.5rem;
    }

    .info-box h4 {
        font-size: 1.1rem;
    }

    .info-box p {
        font-size: 0.9rem;
    }

    /* Contact */
    .contact-form {
        padding: 1.2rem;
        border-radius: 25px;
    }

    .form-group input,
    .form-group textarea {
        padding: 0.85rem;
        border-radius: 25px;
        font-size: 16px;
    }

    /* Footer */
    .footer {
        padding: 1.5rem 0 1rem;
    }

    .footer-section h3 {
        font-size: 1.3rem;
    }

    .footer-section h4 {
        font-size: 1.1rem;
    }

    /* Featured banner */
    .featured-banner {
        padding: 1.5rem 0;
    }

    .banner-content h3 {
        font-size: 1.5rem;
        letter-spacing: 1px;
    }

    .banner-content p {
        font-size: 1rem;
    }

    /* About features */
    .about-features {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .feature-icon {
        font-size: 2.5rem;
    }
}

/* Touch device optimizations */
@media (hover: none) and (pointer: coarse) {
    /* Better touch targets */
    .btn {
        min-height: 48px;
        min-width: 48px;
    }

    .nav-menu a {
        padding: 0.5rem 0;
        min-height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .mobile-menu-toggle {
        min-width: 44px;
        min-height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Remove hover effects on touch devices */
    .product-card:hover {
        transform: none;
    }

    .product-card:active {
        transform: scale(0.98);
    }

    .btn:hover {
        transform: none;
    }

    .btn:active {
        transform: scale(0.97);
    }

    /* Larger tap targets for product overlay buttons */
    .product-overlay .btn {
        padding: 1rem 2.5rem;
        font-size: 1rem;
    }
}

/* Landscape mode on mobile */
@media (max-width: 768px) and (orientation: landscape) {
    .hero {
        min-height: auto;
        padding: 2rem 0;
    }

    .hero-content {
        gap: 2rem;
    }

    .hero-title {
        font-size: 2.5rem;
    }

    .hero-image img {
        max-width: 250px;
    }
}

@media (max-width: 480px) {
    .hero-title {
        font-size: 2.5rem;
    }

    .section-title {
        font-size: 2rem;
    }

    .hero-buttons {
        flex-direction: column;
    }

    .hero-image img {
        max-width: 280px;
    }

    .btn {
        padding: 0.8rem 2rem;
        font-size: 0.9rem;
    }

    .product-card {
        min-width: calc(100% - 2rem);
        max-width: calc(100% - 2rem);
    }

    .product-category::before,
    .product-category::after {
        width: 30px;
    }
}

/* Smooth Scrolling */
html {
    scroll-behavior: smooth;
}
