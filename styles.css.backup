x/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary-color: #FFB6C1;
    --secondary-color: #FF69B4;
    --accent-color: #FFE4B5;
    --peach-color: #FFB6A3;
    --cream-color: #FFF8DC;
    --dark-color: #2c2c2c;
    --light-color: #FFF5F7;
    --white: #ffffff;
    --text-color: #333333;
    --text-light: #666666;
    --shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.15);
}

body {
    font-family: 'Nunito', sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Navigation */
.navbar {
    background: var(--white);
    box-shadow: var(--shadow);
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
    transition: all 0.3s ease;
    border-radius: 0 0 30px 30px;
}

.nav-wrapper {
    display: grid;
    grid-template-columns: 1.2fr auto 1.2fr;
    align-items: center;
    padding: 0.8rem 0;
    gap: 2.5rem;
}

.nav-menu-left {
    display: flex;
    list-style: none;
    gap: 2.5rem;
    justify-content: flex-end;
    align-items: center;
}

.logo {
    text-align: center;
}

.logo h1 {
    font-size: 2.2rem;
    font-weight: 800;
    color: var(--secondary-color);
    margin-bottom: 0;
    letter-spacing: -1px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    padding: 5px 20px;
    border-radius: 50px;
    font-family: 'Fredoka', sans-serif;
    white-space: nowrap;
}

.logo .tagline {
    font-size: 0.55rem;
    color: var(--text-light);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 2px;
    display: block;
    margin-top: 1px;
}

.nav-menu-right {
    display: flex;
    list-style: none;
    gap: 2.5rem;
    justify-content: flex-start;
    align-items: center;
}

.nav-menu-left a,
.nav-menu-right a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: 800;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
    position: relative;
    font-family: 'Fredoka', sans-serif;
}

.nav-menu-left a:hover,
.nav-menu-right a:hover {
    color: var(--secondary-color);
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
}

.nav-menu a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
    position: relative;
}

.nav-menu a:hover {
    color: var(--primary-color);
}

.btn-nav {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: var(--white) !important;
    padding: 0.5rem 1.5rem;
    border-radius: 30px;
    transition: all 0.3s ease;
    font-weight: 800;
    white-space: nowrap;
    font-size: 0.9rem;
}

.btn-nav:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 105, 180, 0.4);
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
}

.mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: var(--secondary-color);
    margin: 3px 0;
    transition: all 0.3s ease;
    border-radius: 3px;
}

/* Hero Section */
.hero {
    min-height: 90vh;
    background: linear-gradient(135deg, var(--cream-color) 0%, var(--light-color) 50%, var(--accent-color) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-top: 70px;
    padding: 4rem 0;
}

.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('https://images.unsplash.com/photo-1578985545062-69928b1d9587?w=1920&h=1080&fit=crop');
    background-size: cover;
    background-position: center;
    opacity: 0.03;
    z-index: 0;
}

.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
    z-index: 0;
}

.hero-content-wrapper {
    position: relative;
    z-index: 1;
    width: 100%;
}

.hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    animation: fadeInUp 1s ease;
}

.hero-text {
    text-align: left;
}

.hero-title {
    font-size: 5.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--dark-color);
    line-height: 1;
    letter-spacing: -2px;
    border-radius: 20px;
    font-family: 'Fredoka', sans-serif;
}

.hero-subtitle {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2.5rem;
    color: var(--text-color);
    letter-spacing: 0;
    font-family: 'Nunito', sans-serif;
}

.hero-buttons {
    display: flex;
    gap: 1rem;
}

.hero-image {
    position: relative;
}

.hero-image img {
    width: 100%;
    max-width: 500px;
    border-radius: 50%;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
}

/* Featured Banner */
.featured-banner {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 50%, var(--peach-color) 100%);
    padding: 2rem 0;
    text-align: center;
    color: var(--white);
}

.banner-content h3 {
    font-size: 2rem;
    font-weight: 900;
    margin-bottom: 0.5rem;
    letter-spacing: 2px;
}

.banner-content p {
    font-size: 1.2rem;
    font-weight: 400;
}

/* Buttons */
.btn {
    display: inline-block;
    padding: 1.2rem 3rem;
    border-radius: 100px;
    text-decoration: none;
    font-weight: 800;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    letter-spacing: 0.5px;
    font-family: 'Fredoka', sans-serif;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: var(--white);
    box-shadow: var(--shadow);
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(255, 105, 180, 0.4);
}

.btn-outline {
    background: transparent;
    color: var(--dark-color);
    border: 3px solid var(--secondary-color);
}

.btn-outline:hover {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: var(--white);
    transform: translateY(-3px);
}

.btn-secondary {
    background: var(--white);
    color: var(--secondary-color);
}

.btn-secondary:hover {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: var(--white);
    transform: translateY(-2px);
}

/* Sections */
section {
    padding: 5rem 0;
}

.section-title {
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 1rem;
    color: var(--dark-color);
    letter-spacing: -1px;
    font-family: 'Fredoka', sans-serif;
}

.section-subtitle {
    text-align: center;
    color: var(--text-light);
    font-size: 1.1rem;
    margin-bottom: 3rem;
    font-weight: 700;
}

/* Products Section */
.products {
    background: var(--light-color);
    padding: 5rem 0;
}

.container-full {
    max-width: 100%;
    padding: 0;
}

.container-full .section-title,
.container-full .section-subtitle {
    padding: 0 20px;
}

.product-category {
    margin-bottom: 4rem;
}

.category-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--dark-color);
    margin-bottom: 2rem;
    padding: 0 20px;
    letter-spacing: -1px;
    text-align: center;
    font-family: 'Fredoka', sans-serif;
}

.products-scroll {
    display: flex;
    gap: 2rem;
    overflow-x: auto;
    overflow-y: hidden;
    padding: 1rem 20px 2rem 20px;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    position: relative;
    scroll-snap-type: x mandatory;
}

/* Hide scrollbar but keep functionality */
.products-scroll::-webkit-scrollbar {
    display: none;
}

.products-scroll {
    -ms-overflow-style: none;
    scrollbar-width: none;
}

/* Fade effect on edges */
.product-category {
    position: relative;
}

.product-category::before,
.product-category::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100px;
    z-index: 2;
    pointer-events: none;
}

.product-category::before {
    left: 0;
    background: linear-gradient(to right, var(--light-color) 0%, transparent 100%);
}

.product-category::after {
    right: 0;
    background: linear-gradient(to left, var(--light-color) 0%, transparent 100%);
}

.product-card {
    background: var(--white);
    border-radius: 40px;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: all 0.3s ease;
    border: 2px solid transparent;
    min-width: calc(33.333% - 1.5rem);
    max-width: calc(33.333% - 1.5rem);
    flex-shrink: 0;
    scroll-snap-align: start;
}

.product-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
    border-color: var(--secondary-color);
}

.product-image {
    position: relative;
    overflow: hidden;
    height: 250px;
    border-radius: 40px 40px 0 0;
}

.product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.product-card:hover .product-image img {
    transform: scale(1.1);
}

.product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255, 182, 193, 0.95) 0%, rgba(255, 105, 180, 0.95) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.product-card:hover .product-overlay {
    opacity: 1;
}

.product-info {
    padding: 1.5rem;
}

.product-info h4 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--dark-color);
    font-weight: 900;
    letter-spacing: 0.5px;
}

.product-info p {
    color: var(--text-light);
    margin-bottom: 1rem;
    font-weight: 600;
}

.price {
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--secondary-color);
}

/* About Section */
.about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.about-text p {
    margin-bottom: 1.5rem;
    color: var(--text-light);
    line-height: 1.8;
}

.about-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
}

.feature {
    text-align: center;
}

.feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
}

.feature h4 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: var(--dark-color);
}

.feature p {
    color: var(--text-light);
    font-size: 0.9rem;
}

.about-image {
    border-radius: 50px;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
}

.about-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Order Section */
.order-section {
    background: var(--white);
    padding: 5rem 0;
}

.order-form-wrapper {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    margin-top: 3rem;
    align-items: start;
}

.order-form {
    background: var(--light-color);
    padding: 3rem;
    border-radius: 40px;
    box-shadow: var(--shadow);
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.order-form .form-group {
    margin-bottom: 1.5rem;
}

.order-form label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--dark-color);
    font-size: 0.95rem;
}

.order-form input,
.order-form select,
.order-form textarea {
    width: 100%;
    padding: 1rem;
    border: 2px solid #e0e0e0;
    border-radius: 30px;
    font-family: 'Poppins', sans-serif;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: var(--white);
}

.order-form input:focus,
.order-form select:focus,
.order-form textarea:focus {
    outline: none;
    border-color: var(--secondary-color);
    box-shadow: 0 0 0 3px rgba(255, 105, 180, 0.1);
}

.order-form select {
    cursor: pointer;
}

.order-form textarea {
    resize: vertical;
    min-height: 100px;
    border-radius: 25px;
}

.form-note {
    background: rgba(255, 105, 180, 0.1);
    border-left: 4px solid var(--secondary-color);
    padding: 1rem 1.5rem;
    border-radius: 25px;
    margin-bottom: 1.5rem;
}

.form-note p {
    margin: 0;
    color: var(--dark-color);
    font-size: 0.95rem;
    font-weight: 500;
}

.btn-large {
    width: 100%;
    padding: 1.2rem 2.5rem;
    font-size: 1.1rem;
    margin-top: 0.5rem;
}

.order-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.info-box {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    padding: 2rem;
    border-radius: 35px;
    text-align: center;
    color: var(--white);
    box-shadow: var(--shadow);
    transition: transform 0.3s ease;
}

.info-box:hover {
    transform: translateY(-5px);
}

.info-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
}

.info-box h4 {
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.info-box p {
    font-size: 1rem;
    margin: 0.25rem 0;
    opacity: 0.95;
}

/* Contact Section */
.contact {
    background: var(--light-color);
}

.contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-top: 3rem;
}

.contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.contact-item {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
}

.contact-icon {
    font-size: 2rem;
    color: var(--secondary-color);
}

.contact-item h4 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: var(--dark-color);
}

.contact-item p {
    color: var(--text-light);
    margin: 0.25rem 0;
}

.contact-form {
    background: var(--white);
    padding: 2rem;
    border-radius: 40px;
    box-shadow: var(--shadow);
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 1rem;
    border: 2px solid #e0e0e0;
    border-radius: 30px;
    font-family: 'Poppins', sans-serif;
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--secondary-color);
}

.form-group textarea {
    resize: vertical;
    border-radius: 25px;
}

/* Footer */
.footer {
    background: var(--dark-color);
    color: var(--white);
    padding: 3rem 0 1rem;
    border-radius: 30px 30px 0 0;
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 2rem;
}

.footer-section h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--secondary-color);
}

.footer-section h4 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
}

.footer-section p {
    color: #b0b0b0;
    line-height: 1.8;
}

.footer-section ul {
    list-style: none;
}

.footer-section ul li {
    margin-bottom: 0.5rem;
}

.footer-section ul li a {
    color: #b0b0b0;
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-section ul li a:hover {
    color: var(--secondary-color);
}

.social-links {
    display: flex;
    gap: 1rem;
    flex-direction: column;
}

.social-link {
    color: #b0b0b0;
    text-decoration: none;
    transition: color 0.3s ease;
}

.social-link:hover {
    color: var(--secondary-color);
}

.footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: #b0b0b0;
}

/* Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Design */
@media (max-width: 968px) {
    .nav-wrapper {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .nav-menu-left,
    .nav-menu-right {
        display: none;
    }

    .logo {
        order: 1;
    }

    .mobile-menu-toggle {
        display: flex;
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
    }

    .nav-menu {
        position: fixed;
        left: -100%;
        top: 80px;
        flex-direction: column;
        background: var(--white);
        width: 100%;
        text-align: center;
        transition: left 0.3s ease;
        box-shadow: var(--shadow);
        padding: 2rem 0;
    }

    .nav-menu.active {
        left: 0;
    }
}

@media (max-width: 768px) {
    /* Container padding for mobile */
    .container {
        padding: 0 15px;
    }

    /* Navigation optimizations */
    .navbar {
        border-radius: 0 0 20px 20px;
    }

    .nav-wrapper {
        padding: 1rem 0;
    }

    .logo h1 {
        font-size: 2rem;
        padding: 5px 15px;
    }

    .logo .tagline {
        font-size: 0.5rem;
    }

    /* Hero section mobile */
    .hero {
        min-height: auto;
        padding: 3rem 0;
        margin-top: 70px;
    }

    .hero-content {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2rem;
    }

    .hero-text {
        text-align: center;
    }

    .hero-title {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    .hero-buttons {
        justify-content: center;
        flex-direction: column;
        gap: 1rem;
    }

    .hero-buttons .btn {
        width: 100%;
        max-width: 300px;
    }

    .hero-image {
        order: -1;
    }

    .hero-image img {
        max-width: 300px;
        margin: 0 auto;
    }

    /* Section spacing */
    section {
        padding: 3rem 0;
    }

    .section-title {
        font-size: 2.2rem;
        margin-bottom: 0.5rem;
    }

    .section-subtitle {
        font-size: 1rem;
        margin-bottom: 2rem;
        padding: 0 10px;
    }

    /* Products mobile optimization */
    .products-scroll {
        padding: 1rem 10px 2rem 10px;
        gap: 1.5rem;
    }

    .product-card {
        min-width: calc(50% - 0.75rem);
        max-width: calc(50% - 0.75rem);
    }

    .product-image {
        height: 200px;
    }

    .product-info {
        padding: 1rem;
    }

    .product-info h4 {
        font-size: 1rem;
    }

    .product-info p {
        font-size: 0.85rem;
    }

    .price {
        font-size: 1.2rem;
    }

    .category-title {
        padding: 0 10px;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
    }

    .product-category::before,
    .product-category::after {
        width: 40px;
    }

    /* About section mobile */
    .about-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .about-features {
        gap: 1.5rem;
    }

    /* Order form mobile */
    .order-form-wrapper {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .order-form {
        padding: 1.5rem;
        border-radius: 30px;
    }

    .form-row {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .order-form input,
    .order-form select,
    .order-form textarea {
        padding: 0.9rem;
        font-size: 16px; /* Prevents zoom on iOS */
    }

    .btn-large {
        padding: 1rem 2rem;
        font-size: 1rem;
    }

    .info-box {
        padding: 1.5rem;
    }

    /* Contact section mobile */
    .contact-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .contact-form {
        padding: 1.5rem;
        border-radius: 30px;
    }

    .contact-item {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    /* Footer mobile */
    .footer {
        border-radius: 20px 20px 0 0;
        padding: 2rem 0 1rem;
    }

    .footer-content {
